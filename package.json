{
  "name": "rayliao.github.io",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "fix": "tslint --fix 'src/**/*.ts{,x}'",
    "lang": "node scripts/lang.js",
    "precommit": "lint-staged",
    "watch": "hakka typed-css-modules -W",
    "deploy": "sh release.sh"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "lint-staged": {
    "src/**/*.tsx": [
      "yarn fix",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/rayliao/rayliao.git"
  },
  "bugs": {
    "url": "https://github.com/rayliao/rayliao/issues"
  },
  "dependencies": {
    "@types/animejs": "^3.1.0",
    "@types/jest": "^24.0.0",
    "@types/node": "^12.0.0",
    "@types/react": "^16.9.0",
    "@types/react-dom": "^16.9.0",
    "@types/react-helmet": "^5.0.15",
    "@types/react-router-dom": "^5.1.3",
    "animejs": "^3.1.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-helmet": "^5.2.1",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "typescript": "~3.7.2"
  },
  "devDependencies": {
    "tslint": "^6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-react": "^4.2.0"
  }
}
